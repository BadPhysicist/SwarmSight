<UserControl x:Class="SwarmSight.UserControls.FilterSlider"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SwarmSight.UserControls"
             mc:Ignorable="d" VerticalAlignment="Top" >
    <Grid>
        <Slider x:Name="slider" Margin="5,27,5,0" VerticalAlignment="Top" Minimum="1" Maximum="255" Value="10" SmallChange="1" TickFrequency="15" MouseUp="slider_MouseUp" PreviewMouseUp="slider_PreviewMouseUp" MouseMove="slider_MouseMove"/>
        <StackPanel HorizontalAlignment="Left" Height="100" Margin="10,66,0,0" VerticalAlignment="Top" Width="100"/>
        <Label x:Name="lblValue" Content="-" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,0,5,0"/>
        <Label x:Name="lblTitle" Content="Property:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5,0,0,0"/>
    </Grid>
</UserControl>
